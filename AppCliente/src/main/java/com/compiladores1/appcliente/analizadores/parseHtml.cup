        | forAnidado comodinTable
        ;

def_html_General ::= HTMABRE sentencias HTMCIERRE
                | HTMABRE HTMCIERRE
                ;

sentencias ::= sentencia sentencias
        | sentencia        
        ;

sentencia ::= comodinH1H2
        | def_table
        | def_for
        ;

